# .env file for Development

# Environment setting
ENVIRONMENT=development

# Django Secret Key
DJANGO_SECRET_KEY=your-dev-secret-key

# Database Configuration
# Using SQLite for local development, so these variables are not needed for SQLite:
# DJANGO_DB_NAME=
# DJANGO_DB_USER=
# DJANGO_DB_PASSWORD=
# DJANGO_DB_HOST=

# Debug Mode
DJANGO_DEBUG=True

# Allowed Hosts (comma-separated, only for demonstration purposes)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Time Zone
DJANGO_TIME_ZONE=UTC

# CORS Allowed Origins (comma-separated)
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# CSRF Trusted Origins (comma-separated)
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:5173
