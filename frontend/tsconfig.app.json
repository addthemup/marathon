{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noEmitOnError": false,  // This allows emitting even if there are type errors
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": false
  },
  "exclude": ["node_modules"]
}
